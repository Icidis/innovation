<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>In Process Service Bus</Description>
    <TargetFrameworks>net451;net452;net46;netstandard1.6</TargetFrameworks>
    <Authors>Louis Lewis</Authors>
    <Version>2.0.0</Version>
    <PackageTags>Innovation; CQRS, Service Bus, InProcess</PackageTags>
    <Company>e3P</Company>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='net451' OR '$(TargetFramework)'=='net452' OR '$(TargetFramework)'=='net46'">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.ComponentModel.DataAnnotations" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard1.6' ">
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.3.0" />
    <PackageReference Include="System.Runtime.Loader" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="1.1.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="1.1.1" />
    <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="1.1.2" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="1.1.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Innovation.Api\Innovation.Api.csproj" />
  </ItemGroup>

</Project>